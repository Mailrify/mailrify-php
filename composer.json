{
  "name": "mailrify/mailrify-php",
  "description": "Official PHP SDK for the Mailrify email API",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=8.1",
    "symfony/http-client": "^6.4 || ^7.0",
    "psr/http-client": "^1.0",
    "psr/http-message": "^1.0",
    "psr/http-factory": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6 || ^10.5",
    "phpstan/phpstan": "^1.11",
    "friendsofphp/php-cs-fixer": "^3.58"
  },
  "autoload": {
    "psr-4": {
      "Mailrify\\Sdk\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mailrify\\Sdk\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:unit": "phpunit --testsuite=unit",
    "test:integration": "phpunit --testsuite=integration",
    "analyse": "phpstan analyse --memory-limit=1G",
    "format": "php-cs-fixer fix --dry-run",
    "fix": "php-cs-fixer fix",
    "spec:sync": "node scripts/sync-openapi.mjs"
  },
  "suggest": {
    "guzzlehttp/guzzle": "Use Guzzle as PSR-18 client if preferred"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "sort-packages": true
  }
}
